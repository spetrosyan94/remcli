{
    "name": "remcli-monorepo",
    "private": true,
    "workspaces": [
        "packages/remcli-app",
        "packages/remcli-cli"
    ],
    "scripts": {
        "setup": "npm install && npm run build:web",
        "build:web": "npm run build --workspace=remcli && npm run export:web --workspace=remcli-app",
        "start": "npm run build --workspace=remcli && node packages/remcli-cli/bin/remcli.mjs daemon start-sync",
        "start:tunnel": "npm run build --workspace=remcli && node packages/remcli-cli/bin/remcli.mjs daemon start-sync --tunnel",
        "claude": "node packages/remcli-cli/bin/remcli.mjs claude",
        "codex": "node packages/remcli-cli/bin/remcli.mjs codex",
        "gemini": "node packages/remcli-cli/bin/remcli.mjs gemini",
        "stop": "node packages/remcli-cli/bin/remcli.mjs daemon stop",
        "status": "node packages/remcli-cli/bin/remcli.mjs daemon status",
        "qr": "node packages/remcli-cli/bin/remcli.mjs daemon qr",

        "dev:app": "npm run start --workspace=remcli-app",
        "dev:web": "npm run web --workspace=remcli-app",
        "dev:cli": "npm run build --workspace=remcli",
        "dev:typecheck": "npm run typecheck --workspace=remcli-app"
    }
}
